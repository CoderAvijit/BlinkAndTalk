            android:padding="1dp"
            android:fontFamily="serif-monospace"
            android:text="@string/r4" />

        <Button
            android:id="@+id/s_btn"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_row="5"
            android:layout_column="1"
            android:padding="1dp"
            android:fontFamily="serif-monospace"
            android:text="@string/s" />

        <Button
            android:id="@+id/t_btn"
