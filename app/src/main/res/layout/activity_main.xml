        <Button
            android:id="@+id/x_btn"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_row="5"
            android:layout_column="6"
            android:padding="1dp"
            android:fontFamily="serif-monospace"
            android:text="@string/x" />

        <Button
            android:id="@+id/row5"
            android:layout_width="50dp"
            android:layout_height="45dp"
